# Client Manager - Environment Configuration
# Copy this file to .env and adjust the values as needed

# Development Mode (true for local storage, false for GitHub)
CL_DEV_MODE=true

# GitHub Configuration (only needed when CL_DEV_MODE=false)
CL_TOKEN=your_github_token_here
CL_USERNAME=your_github_username
CL_REPO=client-manager-data
CL_BRANCH=main

# Flask Configuration
FLASK_ENV=development
SESSION_SECRET=your-secret-key-here

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true

# WhatsApp Configuration (optional)
WHATSAPP_API_URL=your_whatsapp_api_url
WHATSAPP_TOKEN=your_whatsapp_token

# Database Configuration (future use)
DATABASE_URL=sqlite:///local_data/clients.db

# Cache Configuration (future use)
REDIS_URL=redis://localhost:6379

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6

# Rate Limiting
RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT=200

# Features Flags
ENABLE_AI_INTEGRATION=false
ENABLE_ANALYTICS=true
ENABLE_MOBILE_API=true